extends layout

block content

  div(class="relative flex flex-col justify-center overflow-hidden mt-20")
    div(class="w-full p-6 m-auto bg-neutral rounded-md shadow-md lg:max-w-xl")
      h1(class="text-3xl font-semibold text-center text-purple-700") DaisyUI
      form(class="space-y-4 loginForm")
        div
          label(class="label")
            span(class="text-base label-text") Email
          input(type="text", placeholder="Email Address", class="w-full input input-bordered input-primary", name="email", required)
        div
          label(class="label")
            span(class="text-base label-text") Password
          input(type="password", placeholder="Enter Password", class="w-full input input-bordered input-primary", name="password", required, minlength="8")
          div(class="flex items-center justify-between mb-4")
            a(class="text-xs text-gray-600 hover:underline hover:text-blue-600", href="#") Forget Password?
        div
          button(class="btn btn-submit bg-info w-full m-y-4", type="submit") Login
        div(class="text-center text-gray-600 text-xs mt-4")
          span Don't have an account? 
          a(class="text-blue-600 hover:underline", href="/signup") Register
